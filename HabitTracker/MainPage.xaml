<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTracker.MainPage">

    <FlexLayout 
        BackgroundColor="{StaticResource Primary}"
        Direction="Column"
        
        >
        <!-- HEADER -->
        <Label
            Text="Daily Habits"
            FontAttributes="Bold"
            TextTransform="Uppercase"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            FontSize="24"
            FlexLayout.Grow=".1"     />
        
        <!-- CONTENT -->
        <VerticalStackLayout
            FlexLayout.Grow="1">
            
        </VerticalStackLayout>
        
        <!-- NAVBAR -->
        <Grid
            FlexLayout.Grow=".1"
            BackgroundColor="#00000000"
            Padding="2"
            ColumnSpacing=".2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- ADD BUTTON -->
            <Button 
                Text="+ Add"
                BackgroundColor="#00000000"
                Grid.Column="1"/>
            <!-- SHOW LIST OF HABITS BUTTON -->
            <Button 
                Text="TBD"
                BackgroundColor="#00000000"/>
        </Grid>

    </FlexLayout>

</ContentPage>
